{
  "name": "kindle-dashboard",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --hot src/index.ts",
    "build": "bun run build.ts",
    "test": "bun test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker_build": "docker build --pull -t $npm_package_name .",
    "docker_run": "docker run --env-file .env -d $npm_package_name --name $npm_package_name"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@sentry/bun": "^9.42.0",
    "@frankmarazita/node-obsidian-local-rest-api": "^0.0.1",
    "bun-plugin-tailwind": "^0.1.2",
    "react": "^19",
    "react-dom": "^19",
    "tailwindcss": "^4.1.11",
    "zod": "^4.1.12"
  }
}
